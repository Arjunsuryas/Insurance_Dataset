    ('preprocessor', preprocessor),
    ('model', LGBMRegressor(
        n_estimators=500,
        learning_rate=0.05,
        max_depth=-1,
        num_leaves=31,
        subsample=0.8,
        colsample_bytree=0.8,
        random_state=42
    ))
])

lgb_pipe.fit(X_train, y_train)
y_pred_lgb = lgb_pipe.predict(X_test)

print("LightGBM RÂ²:", r2_score(y_test, y_pred_lgb))
